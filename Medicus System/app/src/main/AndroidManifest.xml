<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.medicusys.medicussystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityPersonal"
            android:label="@string/title_activity_personal"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ActivityDiagnose"
            android:label="@string/title_activity_diagnose"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ActivityCabinet"
            android:label="@string/title_activity_cabinet"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".ServiceMedicusMessaging"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>