{% extends 'patient/base.html.twig' %}
{% block title %}{{ i18n.patientPanel }}{% endblock %}
{% block head %}{% endblock %}
{% block body %}
    <div class="container">
        <div class="col-md-9 offset-md-1 admin-container">
            <div class="admin-top flex-container flex-column">
                {#                    <h5>{{ i18n.doctorCabinet }}</h5>#}
            </div>
            <div class="table-responsive admin-table">
                <table id="patientsTable" class="table table-striped table-hover admin-table">
                    <div class="card mb-2">
                        <div class="row no-gutters">
                            <div class="col-6">
                                <img src="../../champis/images/no-photo.webp" width="450" class="card-img profile-bordered" alt="...">
                            </div>
                            <div class="col-6">
                                <div class="card-body" style="padding-top: 0;">
                                    <div class="row">
                                        <div class="col-md-12 pt-2 mb-2 profile-bordered" >
                                            <h5 class="card-title"><span class="badge badge-dark">{{ i18n.NName }}: </span>&ensp;{{ user.firstName }}                                            </h5>
                                            <h5 class="card-title"><span class="badge badge-dark">{{ i18n.Surname }}: </span>&ensp;{{ user.lastName }}
                                            </h5>
                                            <h5 class="card-title"><span class="badge badge-dark">{{ i18n.Patronymic }}: </span>&ensp;{{ user.patronymic }}
                                            </h5>
                                            <h5 class="card-title"><span
                                                        class="badge badge-dark">{{ i18n.Date_of_birth }}:</span>&ensp;{{ user.birthDate }}
                                            </h5>

                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 pt-2 mb-2 profile-bordered">
                                            <h5 class="card-title"><span class="badge badge-dark">{{ i18n.City }}: </span>&ensp;{{ user.homeAddress }}
                                            </h5>
                                            <h5 class="card-title"><span class="badge  badge-dark">{{ i18n.Phone }}:</span>&ensp;+{{ user.mobilePhone }}
                                            </h5>
                                            <h5 class="card-title"><span class="badge badge-dark">Email:</span>&ensp;{{ user.email }}
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 pt-2 pb-2 mb-2 profile-bordered">
{#                                            <h5 class="card-title"><span class="badge badge-warning">{{ i18n.login }}:</span>&ensp;asdasdas@xcasd.com#}
{#                                            </h5>#}
                                            <a href="/logout" class="btn btn-outline-medicus">{{ i18n.Logout }}</a>
                                        </div>
                                    </div>
                                    <br>

                                </div>
                            </div>
                        </div>
                    </div>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}{% endblock %}